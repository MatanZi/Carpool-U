<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Features.ProfileActivity">

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="89dp"
        android:autoText="true"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/mdtp_accent_color"
        android:textSize="25sp"
        android:visibility="visible"
        app:autoSizeMaxTextSize="@dimen/mdtp_date_picker_header_text_size"
        tools:text="@string/pref_header_general" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="99dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/FindRideBtn"
        android:text="logout"
        android:layout_toLeftOf="@+id/FindRideBtn" />

    <Button
        android:id="@+id/FindRideBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="347dp"
        android:text="Find Ride" />

    <Button
        android:id="@+id/PostRideBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FindRideBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Post Ride" />

    <ImageButton
        android:id="@+id/settingProfileButton"
        style="@android:style/Widget.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonLogout"
        android:layout_marginEnd="13dp"
        app:srcCompat="@drawable/ic_settings_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp" />

    <Button
        android:id="@+id/MyRideHistoyButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="292dp"
        android:text="Rides History" />


</RelativeLayout>