<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pavements1"
    tools:context=".Profile_Features.ProfileActivity">

    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="87dp"
        android:autoText="true"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="25sp"
        android:visibility="visible"
        app:autoSizeMaxTextSize="@dimen/mdtp_date_picker_header_text_size"
        tools:text="@string/pref_header_general" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="99dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/FindRideBtn"
        android:layout_toStartOf="@+id/FindRideBtn"
        android:background="@android:color/transparent"
        android:text="logout" />

    <Button
        android:id="@+id/FindRideBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="313dp"
        android:background="@color/colorAccent"
        android:text="Find Ride" />

    <Button
        android:id="@+id/PostRideBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FindRideBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:text="Post Ride" />

    <ImageButton
        android:id="@+id/settingProfileButton"
        style="@android:style/Widget.ImageButton"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/buttonLogout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/mdtp_material_button_selected"
        app:srcCompat="@drawable/ic_settings_black_24dp" />

    <Button
        android:id="@+id/MyRideHistoyButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="234dp"
        android:background="@color/colorAccent"
        android:text="Rides History" />


</RelativeLayout>