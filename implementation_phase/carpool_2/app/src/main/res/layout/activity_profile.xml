<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Features.ProfileActivity">

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="74dp"
        android:autoText="true"
        android:text="user name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="14sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="99dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/FindRideBtn"
        android:text="logout"
        android:layout_toLeftOf="@+id/FindRideBtn" />

    <Button
        android:id="@+id/FindRideBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172dp"
        android:text="Find Ride" />

    <Button
        android:id="@+id/PostRideBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="154dp"
        android:text="Post Ride" />

    <ImageButton
        android:id="@+id/settingProfileButton"
        style="@android:style/Widget.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonLogout"
        android:layout_marginEnd="13dp"
        app:srcCompat="@drawable/ic_settings_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp" />


</RelativeLayout>